<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/shadow"
    android:orientation="vertical"
    android:id="@+id/linear">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:outlineSpotShadowColor="#000"
        app:cardElevation="15dp"
        android:background="#FFF"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/uplodimage"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageRV"
            android:layout_width="wrap_content"
            android:layout_height="190dp" />


        <LinearLayout
            android:gravity="center"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vehicleTypeRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/textfont1"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/vehicleNumberRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/allcategoriesfont"
                android:maxLines="1"
                android:text="Price"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />


        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/vehiclecompanyRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/textfont1"
                    android:maxLines="1"
                    android:text="Price"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/vehicleDescriptionRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/allcategoriesfont"
                    android:maxLines="1"
                    android:text="Price"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:layout_marginBottom="12dp"/>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>