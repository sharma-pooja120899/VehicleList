<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleRegister"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/textfont1"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:text="Vehicle Details"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/vehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/allcategoriesfont"
                android:hint="Vehicle Type"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/VehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allcategoriesfont"
                android:hint="Vehicle Number"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allcategoriesfont"
                android:hint="Company Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allcategoriesfont"
                android:hint="Description"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/textfont1"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:text="Upload Photo"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/uplodimage"
        android:layout_gravity="center"
        android:id="@+id/image"
        android:background="#FFF"
        />


            <Button
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/abc"
                android:padding="20dp"
                android:text="Upload"
                android:textColor="#FFF"
                android:textSize="20sp"
               />
                <Button
                    android:id="@+id/Showuploaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/abc"
                    android:padding="20dp"
                    android:text="Show Uploaded"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"/>




        </LinearLayout>


    </ScrollView>


</LinearLayout>