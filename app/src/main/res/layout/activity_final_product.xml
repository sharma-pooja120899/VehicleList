<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalProduct"
    android:weightSum="2"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shadow"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:elevation="10dp"
        android:layout_weight="0.25"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="#000"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/uplodimage"
            android:id="@+id/imageretrieve"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_weight=".75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="#000"
        android:layout_marginBottom="2dp"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Details:"
                android:textColor="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/textfont1"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/disc_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/textfont1"
                    android:textStyle="bold"
                    android:text="Type:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="---"
                    android:id="@+id/typeReceived"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/linear_len"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/textfont1"
                    android:textStyle="bold"
                    android:text="Number:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="---"
                    android:textSize="15sp"
                    android:id="@+id/Numberretrieve"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/linear_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/textfont1"
                    android:textStyle="bold"
                    android:text="Company Name:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/companyReceive"
                    android:text="---"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/linear_gen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/textfont1"
                    android:textStyle="bold"
                    android:text="Description:"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="---"
                    android:textSize="15sp"
                    android:id="@+id/descriptionReceive"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorAccent"/>


</LinearLayout>
    </android.support.v7.widget.CardView>



<LinearLayout

android:layout_weight=".75"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:weightSum="2"
    android:background="#FFF"
android:layout_marginTop="2dp"
android:layout_gravity="center"
    android:gravity="center"
android:orientation="horizontal"
    android:layout_marginBottom="5dp">



    <Button

    android:text="DELETE dETAILS"
    android:background="#FFF"
    android:layout_width="0dp"
    android:gravity="center"
    android:textColor="#000"
    android:id="@+id/deleteItem"
    android:layout_weight="1"
    android:layout_height="wrap_content" />

<Button
    android:text="Update details"
    android:background="@color/colorPrimaryDark"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:textColor="#FFF"
    android:gravity="center"
    android:id="@+id/Update"
    android:layout_gravity="center|bottom"
    android:layout_height="wrap_content" />

</LinearLayout>


    </LinearLayout>
    </ScrollView>

    </LinearLayout>